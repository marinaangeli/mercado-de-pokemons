<%= form_tag pokemons_path, method: :get do %>
  <%= select_tag :sort_by, options_for_select([["Lowest price", "lowest_price"], ["Highest price", "highest_price"], ["Alphabetical order", "alphabetical_order"]]) %>
  <%= submit_tag "Sort" %>
<% end %>
<div class="cards-grid">
  <% @pokemons.each do |pokemon|%>
    <div class="card">
      <img src=<%= pokemon.image_url %> class="card-img">
      <div class="card-body">
        <h5 class="card-title"><%= pokemon.name %></h5>
        <span class="card-text">Price: <%= number_to_currency((pokemon.experience)*@satoshi_rate) %></span>
        <%= link_to "Buy!", new_pokemon_deal_path(pokemon) %>
      </div>
    </div>
  <% end %>
</div>
